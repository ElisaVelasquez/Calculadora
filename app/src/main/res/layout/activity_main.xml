<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Calculadora"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="14dp"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/titulo"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <TextView
        android:id="@+id/campo2"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/campo1"
        app:layout_constraintTop_toBottomOf="@+id/campo1" />



    <TableRow android:layout_marginTop="30dp">

        <Button
            android:id="@+id/b7"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="7"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="8"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="9"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bSum"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:onClick="clicOp"
            android:text="+"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/b4"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="4"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="6"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bRes"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:onClick="clicOp"
            android:text="-"
            android:textSize="20sp" />
    </TableRow>


    <TableRow>

        <Button
            android:id="@+id/b1"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:onClick="clicNum"
            android:text="2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:text="3"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textSize="14sp"
            android:onClick="clicNum"
            />

        <Button
            android:id="@+id/bMult"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:onClick="clicOp"
            android:text="*"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/b0"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:text="0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="3dp"
            android:textSize="14sp"
            android:onClick="clicNum"
            />

        <Button
            android:id="@+id/bResult"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="Result"
            android:textSize="10sp" />

        <Button
            android:id="@+id/bBorrar"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="Borrar"
            android:textSize="10sp" />
        <Button
            android:id="@+id/bDiv"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:text="/"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:onClick="clicOp"
            />
    </TableRow>


</TableLayout>